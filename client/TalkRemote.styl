/* CSS declarations go here */
notblack = #555
red = #cc3535

body
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-weight  200
  font-size 110%
  margin 0
  padding  0
  -webkit-user-select  none
  -khtml-user-select  none
  -moz-user-select  none
  -o-user-select  none
  user-select  none
  background url('/rebel.png')

h1, h2, h3, h4, h5
  color red
  font-family 'Fjalla One'

h1
  border-bottom 6px #fff solid
  padding 10px

a 
  color red

.remote
  width 95%
  height 50%
  margin 0 auto
  padding 10px
  background-color  #C3FAEC
  border 4px solid #9BFAE2


.remote .userselection
  background-color red


.remote img hover
    border-bottom  6px solid #ccc



.remoteStats
    width 375px
    height 50px
    margin 0 auto
    padding 10px


.container
    background-color  #fafafa
    width 450px
    height 300px
    padding 10px
    border 6px solid #f5f5f5
    box-shadow  3px 3px 6px #ccc

.mainPageContainer
    background-color rgba(140,201,179,0.4)
    color #fff
    padding 2%

.frontPageRoomForm
    width 95%
    margin 0 auto

.goToRoomForm input
    margin-bottom 0

.right
  float right

.left
  float left

.mainButton
  width 175px
  height 35px
  padding 1.5% .5% 0 .5%
  text-align center

.mainButton:hover
  background-color rgba(0,0,0,.09)
  color #fff

.demoRoomPanel
  width 90%
  margin 0 auto

#outer 
    width  600px
    margin  0 auto    

.recentRoomsTable
    width 50%
    margin 0 auto
    background-color  #fff


.remote ul, .remoteStats ul
    list-style-type  none
    width 100%
    height 100%
    margin 15px 0 15px
    overflow  hidden
    clear both


.remote li
    width 15%
    text-align  center
    padding 2%
    margin 1%


.remote li:hover
    color #ccc


.remoteStats li
    width 75px
    text-align  center
    height 75px
    padding-top 7px
    padding-bottom 7px


.remoteButtonStats
    margin-top 5px
    width 10px
    height 20px
    float left


.remoteButtonStats p, .remoteStats
    font-size  42px
    font-family "Fjalla One"


.loginButtons
    margin  40px auto
    width  166px

#sidebar
    background-color rgba(140,201,179,0.6)
    padding .25%

.nav
    text-align center

.nav-stacked li
    margin 4%


.nav-pills > .active > a, .nav-pills > .active > a:hover, .nav-pills > .active > a:focus 
    color #fff
    background-color red


.student 
    cursor  pointer
    padding  5px


.student .name 
    display  inline-block
    width  300px
    font-size  1.75em

.studentDemoButton, .teacherDemoButton
    background-color #fff
    color notblack


.student .score 
    display  inline-block
    width  100px
    text-align  right
    font-size  2em
    font-weight  bold
    color notblack


.student.selected 
    background-color  yellow


.student.selected .score 
    color  black


.details, .none 
    font-weight  bold
    font-size  2em
    border-style  dashed none none none
    border-color  #ccc
    border-width  4px
    margin  50px 10px
    padding  10px 0px


.none 
    color notblack


.inc 
  cursor pointer


.remoteButton
    width 30px
    float left
    color #fff
    background-color #555
    overflow hidden
    padding 5px


.activeButton
  background-color yellow
