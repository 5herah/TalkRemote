/* CSS declarations go here */
notblack = #555

body
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-weight  200
  font-size 110%
  margin  50px 0
  padding  0
  -webkit-user-select  none
  -khtml-user-select  none
  -moz-user-select  none
  -o-user-select  none
  user-select  none

h1, h2, h3, h4, h5
  color notblack
  font-family 'Fjalla One'

h1
  border-bottom 6px #fff solid
  padding 10px

a 
  color notblack

.remote
  width 375px
  height 100px
  margin 0 auto
  padding 10px
  background-color  #C3FAEC
  border-radius  5px
  border 4px solid #9BFAE2


.remote img hover
    border-bottom  6px solid #ccc



.remoteStats
    width 375px
    height 50px
    margin 0 auto
    padding 10px


.container
    background-color  #fafafa
    width 450px
    height 300px
    padding 10px
    border 6px solid #f5f5f5
    box-shadow  3px 3px 6px #ccc

.frontPageRoomForm
    width 65%
    margin 0 auto

.goToRoomForm input
    margin-bottom 0

#outer 
    width  600px
    margin  0 auto    


.recentRoomsTable
    width 50%
    margin 0 auto
    background-color  #fff


.remote ul, .remoteStats ul
    list-style-type  none
    width 100%
    height 100%
    margin 15px 0 15px
    overflow  hidden
    clear both


.remote li
    width 20%
    text-align  center


.remoteStats li
    width 75px
    text-align  center
    height 75px
    padding-top 7px
    padding-bottom 7px


.remoteButton
    width 30px
    height 30px
    float left


.remoteButtonStats
    margin-top 5px
    width 10px
    height 20px
    float left


.remoteButtonStats p, .remoteStats
    font-size  42px
    font-family "Fjalla One"


.loginButtons
    margin  40px auto
    width  166px



.student 
    cursor  pointer
    padding  5px


.student .name 
    display  inline-block
    width  300px
    font-size  1.75em


.student .score 
    display  inline-block
    width  100px
    text-align  right
    font-size  2em
    font-weight  bold
    color notblack


.student.selected 
    background-color  yellow


.student.selected .score 
    color  black


.details, .none 
    font-weight  bold
    font-size  2em
    border-style  dashed none none none
    border-color  #ccc
    border-width  4px
    margin  50px 10px
    padding  10px 0px


.none 
    color notblack


.inc 
  cursor pointer

